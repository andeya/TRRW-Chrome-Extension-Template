{
  "name": "React-TS-Chrome-Ext",
  "version": "1.0",
  "description": "Use React + TypeScript + Antd to develop Chrome Extension",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2,
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "React-TS-Chrome-Ext",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "static/js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "static/css/content.css"
      ],
      "js": [
        "static/js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "insert.js"
  ]
}